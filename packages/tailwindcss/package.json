{
  "name": "@repo/tailwindcss",
  "version": "1.0.0",
  "description": "Shared Tailwind CSS configuration for monorepo",
  "type": "module",
  "private": true,
  "exports": {
    "./style": "./shared-styles.css",
    "./postcss": "./postcss.config.js",
    "./eslint": {
      "default": "./eslint-preset.js",
      "import": "./eslint-preset.js",
      "require": "./eslint-preset.cjs"
